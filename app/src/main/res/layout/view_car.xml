<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/car_image"
        android:layout_width="150dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/slider_bottom"
        android:layout_toEndOf="@+id/car_image"
        android:layout_toRightOf="@+id/car_image"
        android:orientation="vertical"
        android:paddingTop="@dimen/slider_top">

        <TextView
            android:id="@+id/car_make"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/slider_top"
            android:text="BMW 5" />

        <TextView
            android:id="@+id/car_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/slider_top"
            android:text="Some stuff here" />

        <TextView
            android:id="@+id/car_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/slider_top"
            android:text="Some random price here" />

    </LinearLayout>
</RelativeLayout>